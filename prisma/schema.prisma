enum Shift {
  MANHA
  TARDE
  INTEGRAL
}

enum RegistrationStatus {
  INDICADO
  EM_PROGRESSO
  FALHA
  SUCESSO
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id          String        @id @default(uuid())
  name        String
  class       String
  shift       Shift
  guardian    String
  email       String        @unique
  discount    Int           @default(0)
  Indications Indications[]
}

model Indications {
  id           String             @id @default(uuid())
  name         String
  class        String
  shift        Shift
  guardian     String
  phone        String
  email        String             @unique
  isMatriculed Boolean            @default(false)
  student      Student            @relation(fields: [student_id], references: [id])
  student_id   String
  status       RegistrationStatus @default(INDICADO)
}
